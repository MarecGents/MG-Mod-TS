{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@spt/*": [
        "types/*"
      ]
    },
    "moduleResolution": "Node"
  },
  "include": [
    "types/*",
    "types/**/*"
  ]
}
